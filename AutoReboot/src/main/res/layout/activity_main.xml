<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dyhdm.huxj.autoreboot.MainActivity">

    <RelativeLayout
        android:layout_width="@dimen/item_width"
        android:layout_height="@dimen/item_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="计数器"
            android:textSize="@dimen/item_text_size" />

        <TextView
            android:id="@+id/text_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textSize="@dimen/item_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/item_width"
        android:layout_height="@dimen/item_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="开启功能"
            android:textSize="@dimen/item_text_size" />

        <CheckBox
            android:id="@+id/checkbox_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/item_width"
        android:layout_height="@dimen/item_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="重启时间"
            android:textSize="@dimen/item_text_size" />

        <Spinner
            android:id="@+id/reboot_time_list"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/item_width"
        android:layout_height="@dimen/item_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Recovery"
            android:textSize="@dimen/item_text_size" />

        <CheckBox
            android:id="@+id/checkbox_recovery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/item_width"
        android:layout_height="@dimen/item_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_clean_counter"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:text="清除计数器"
            android:textSize="@dimen/item_text_size" />

        <Button
            android:id="@+id/bt_save_config"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="保存"
            android:textSize="@dimen/item_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/item_width"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="如果你勾选了“开启功能”，当你点击保存时，系统将会自动重启！！！"
            android:textSize="@dimen/item_text_size" />
    </RelativeLayout>

</RelativeLayout>
